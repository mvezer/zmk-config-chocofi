#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

&mt {
    quick-tap-ms = <175>;
    require-prior-idle-ms = <150>;
    flavor = "balanced";
};

/ {
    combos {
        compatible = "zmk,combos";

        cb_minus {
            bindings = <&kp MINUS>;
            key-positions = <3 8>;
        };

        cb_colon {
            bindings = <&kp COLON>;
            key-positions = <4 7>;
        };

        cb_gaming {
            bindings = <&tog 0>;
            key-positions = <25 34>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&none  &kp Q           &kp W           &kp F               &kp P             &kp B        &kp J        &kp L              &kp U        &kp Y            &kp SQT          &none
&none  &mt LEFT_GUI A  &mt LEFT_ALT R  &mt LEFT_CONTROL S  &mt LEFT_SHIFT T  &kp G        &kp M        &mt RIGHT_SHIFT N  &mt RCTRL E  &mt RIGHT_ALT I  &mt RIGHT_WIN O  &none
&none  &kp Z           &kp X           &kp C               &kp D             &kp V        &kp K        &kp H              &kp COMMA    &kp DOT          &kp FSLH         &none
                                       &none               &lt 3 SPACE       &lt 2 TAB    &lt 1 ENTER  &kp BACKSPACE      &none
            >;
        };

        symbols_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &kp AMPERSAND  &kp TILDE   &kp PERCENT  &kp GRAVE     &kp EQUAL        &bt BT_SEL 1  &kp F7  &kp F8  &kp F9  &kp F12  &none
&none  &kp SEMI       &kp DOLLAR  &kp HASH     &kp ASTERISK  &kp PLUS         &bt BT_SEL 2  &kp F4  &kp F5  &kp F6  &kp F11  &none
&none  &kp CARET      &kp UNDER   &kp AT_SIGN  &kp PIPE      &kp BACKSLASH    &bt BT_SEL 3  &kp F1  &kp F2  &kp F3  &kp F10  &none
                                  &none        &trans        &trans           &trans        &trans  &none
            >;
        };

        num_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &trans  &trans  &trans  &trans  &trans    &kp PERCENT  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp PLUS      &none
&none  &trans  &trans  &trans  &trans  &trans    &kp MINUS    &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp EQUAL     &none
&none  &trans  &trans  &trans  &trans  &trans    &kp UNDER    &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp ASTERISK  &none
                       &trans  &trans  &trans    &kp MINUS    &kp N0        &kp ASTERISK
            >;
        };

        nav_layer {
            bindings = <
&none  &trans  &trans  &trans  &trans  &trans    &trans      &kp LG(LEFT)    &kp LG(DOWN_ARROW)  &kp LG(UP_ARROW)  &kp LG(RIGHT)  &none
&none  &trans  &trans  &trans  &trans  &trans    &caps_word  &kp LEFT_ARROW  &kp DOWN_ARROW      &kp UP_ARROW      &kp RIGHT      &none
&none  &trans  &trans  &trans  &trans  &trans    &kp INSERT  &kp HOME        &kp PAGE_DOWN       &kp PAGE_UP       &kp END        &none
                       &trans  &trans  &trans    &trans      &kp BACKSPACE   &kp DELETE
            >;
        };
    };
};

;
